@using BaSalesManagementApp.MVC.Models.AdminVMs
@model IPagedList<AdminListVM>
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Mvc.Core.Common
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["Admin_Index"];
    bool isEmployee = ViewBag.IsEmployee ?? false;
}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
    <style>
        .form-select {
            width: auto;
            min-width: 80px;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .table thead tr {
            border-bottom: 1px solid #dee2e6;
        }

        /* Dashboard Kartları */
        .dashboard-card {
            background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            border-radius: 12px;
            padding: 15px;
            color: white;
            text-align: center;
            box-shadow: 0 4px 15px rgba(0,0,0,0.1);
            transition: transform 0.3s ease;
            height: 100px;
            position: relative;
            overflow: hidden;
        }

            .dashboard-card:hover {
                transform: translateY(-3px);
            }

            .dashboard-card.card-primary {
                background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
            }

            .dashboard-card.card-success {
                background: linear-gradient(135deg, #56ab2f 0%, #a8e6cf 100%);
            }

            .dashboard-card.card-info {
                background: linear-gradient(135deg, #3498db 0%, #2980b9 100%);
            }

            .dashboard-card.card-warning {
                background: linear-gradient(135deg, #f39c12 0%, #f1c40f 100%);
            }

        .dashboard-number {
            font-size: 1.8rem;
            font-weight: bold;
            margin-bottom: 5px;
        }

        .dashboard-title {
            font-size: 0.9rem;
            opacity: 0.9;
            line-height: 1.2;
        }

        .dashboard-icon {
            font-size: 2rem;
            opacity: 0.25;
            position: absolute;
            right: 15px;
            top: 15px;
        }

        /* Card View Styles */
        .card-view .admin-card {
            border: 1px solid #dee2e6;
            border-radius: 8px;
            padding: 15px;
            text-align: center;
            background-color: #fff;
            transition: transform 0.2s, box-shadow 0.2s;
            position: relative;
            z-index: 1;
        }

            .card-view .admin-card:hover {
                transform: translateY(-5px);
                box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
                z-index: 2;
            }

            .card-view .admin-card:has(.dropdown .dropdown-menu.show) {
                z-index: 3;
            }

        .card-view .profile-picture {
            width: 60px;
            height: 60px;
            object-fit: cover;
            margin-bottom: 10px;
        }

        .card-view .initials-circle {
            width: 60px;
            height: 60px;
            background-color: #e7e7ff;
            color: #696cff;
            display: flex;
            justify-content: center;
            align-items: center;
            font-weight: 500;
            font-size: 1.2rem;
            border-radius: 50%;
            margin: 0 auto 10px;
        }

        .card-view .card-title {
            font-size: 1.1rem;
            font-weight: 500;
            margin-bottom: 5px;
        }

        .card-view .card-email {
            font-size: 0.9rem;
            color: #6c757d;
            margin-bottom: 10px;
        }

        .card-view .dropdown {
            position: absolute;
            top: 10px;
            right: 10px;
        }

        /* Responsive Grid */
        .card-view {
            display: grid;
            grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
            gap: 20px;
        }

        /* Toggle Button */
        .view-toggle-btn {
            font-size: 1rem;
        }

        /* Hide/Show Views */
        .table-view {
            display: block;
        }

        .card-view {
            display: none;
        }

            .card-view.active {
                display: grid;
            }

        .table-view.active {
            display: block;
        }

        .table-view:not(.active) {
            display: none;
        }
    </style>
</head>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">@localizer["Admin"] /</span> @localizer["List"]
        </h4>

        <!-- Dashboard Kartları -->
        @if (ViewBag.AdminDashboard != null)
        {
            var dashboard = ViewBag.AdminDashboard as AdminDashboardVM;
            <div class="row mb-4">
                <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
                    <div class="dashboard-card card-primary">
                        <div class="dashboard-icon">
                            <i class="bi bi-person-gear"></i>
                        </div>
                        <div class="dashboard-number">@dashboard.TotalAdmins</div>
                        <div class="dashboard-title">@localizer["TotalAdmins"]</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
                    <div class="dashboard-card card-success">
                        <div class="dashboard-icon">
                            <i class="bi bi-person-plus"></i>
                        </div>
                        <div class="dashboard-number">@dashboard.NewAdminsThisMonth</div>
                        <div class="dashboard-title">@localizer["New Admins This Month"]</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
                    <div class="dashboard-card card-info">
                        <div class="dashboard-icon">
                            <i class="bi bi-people"></i>
                        </div>
                        <div class="dashboard-number">@dashboard.TotalEmployees</div>
                        <div class="dashboard-title">@localizer["TotalUsers"]</div>
                    </div>
                </div>
                <div class="col-lg-3 col-md-6 col-sm-6 mb-4">
                    <div class="dashboard-card card-warning text-center text-white">
                        <div class="dashboard-icon">
                            <i class="bi bi-cart-check"></i>
                        </div>
                        <div class="dashboard-number fs-3 fw-bold">@dashboard.TotalOrders</div>                    
                        <div class="dashboard-title">@localizer["TotalOrders"]</div>
                        <div class="mt-1">
                            <small class="text-white fw-bold">
                                @string.Format("{0:N2} ₺", dashboard.TotalOrderAmount)
                            </small>
                        </div>
                    </div>
                </div>



            </div>
        }

        <!-- Kontroller -->
        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                @if (!isEmployee)
                {
                    <a asp-action="Create" class="btn btn-primary">@localizer["Create_New"]</a>
                }
                <button id="viewToggleBtn" class="btn btn-secondary view-toggle-btn @(isEmployee ? "" : "ms-2")">
                    @localizer["Change_View"]
                </button>
            </div>

            <div class="d-flex">
                <!-- Show Entries Dropdown -->
                <form method="get" asp-action="Index" class="d-inline-block me-3">
                    <label>@localizer["Show"]</label>
                    <select name="pageSize" onchange="this.form.submit()" class="form-select d-inline-block w-auto ms-2">
                        @if (ViewData["CurrentPageSize"]?.ToString() == "5")
                        {
                            <option value="5" selected>5</option>
                        }
                        else
                        {
                            <option value="5">5</option>
                        }

                        @if (ViewData["CurrentPageSize"]?.ToString() == "10")
                        {
                            <option value="10" selected>10</option>
                        }
                        else
                        {
                            <option value="10">10</option>
                        }

                        @if (ViewData["CurrentPageSize"]?.ToString() == "20")
                        {
                            <option value="20" selected>20</option>
                        }
                        else
                        {
                            <option value="20">20</option>
                        }

                        @if (ViewData["CurrentPageSize"]?.ToString() == "50")
                        {
                            <option value="50" selected>50</option>
                        }
                        else
                        {
                            <option value="50">50</option>
                        }
                    </select>
                    <label>@localizer["Entries"]</label>
                </form>

                <!-- Sort Admin Dropdown -->
                <div id="sortAdmin" class="dropdown d-inline-block">
                    <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="bi bi-filter" style="font-size:1rem"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton">
                        <a class="dropdown-item" data-value="name" href="#">A-Z</a>
                        <a class="dropdown-item" data-value="namedesc" href="#">Z-A</a>
                        <a class="dropdown-item" data-value="createddate" href="#">@localizer["Newest_First"]</a>
                        <a class="dropdown-item" data-value="createddatedesc" href="#">@localizer["Oldest_First"]</a>
                    </div>
                </div>
            </div>
        </div>

        <!-- Tablo Görünümü -->
        <div class="card table-view active">
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@localizer["Profile"].ToString().ToUpper(new System.Globalization.CultureInfo(System.Threading.Thread.CurrentThread.CurrentCulture.Name))</th>
                            <th>@localizer["ColumnName"]</th>
                            <th>@localizer["ColumnSurname"]</th>
                            <th>@localizer["Email"].ToString().ToUpper(new System.Globalization.CultureInfo(System.Threading.Thread.CurrentThread.CurrentCulture.Name))</th>
                            <th>@localizer["CreatedDate"].ToString().ToUpper(new System.Globalization.CultureInfo("tr-TR"))</th>
                            @if (!isEmployee)
                            {
                                <th class="text-end">@localizer["Actions"]</th>
                            }
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.PhotoData != null)
                                    {
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PhotoData)" alt="Profile Picture" class="rounded-circle profile-picture" style="width: 40px; height: 40px;" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle" style="width: 40px; height: 40px; background-color: #e7e7ff; color: #696cff; display: flex; justify-content: center; align-items: center; font-weight:500">
                                            @item.FirstName.Substring(0, 1)@item.LastName.Substring(0, 1)
                                        </div>
                                    }
                                </td>
                                <td class="fw-medium">@Html.DisplayFor(modelItem => item.FirstName)</td>
                                <td class="fw-medium">@Html.DisplayFor(modelItem => item.LastName)</td>
                                <td class="fw-medium">@Html.DisplayFor(modelItem => item.Email)</td>
                                <td class="fw-medium">@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                @if (!isEmployee)
                                {
                                    <td class="text-end">
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" style="margin-right: 28px;">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a asp-action="Details" asp-route-adminId="@item.Id" class="dropdown-item"><i class="bx bx-info-circle me-1"></i> @localizer["Details"]</a>
                                                <a asp-action="Update" asp-route-adminId="@item.Id" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i>@localizer["Update"]</a>
                                                <a href="javascript:;" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteModal" data-admin-id="@item.Id">
                                                    <i class="bx bx-trash me-1"></i> @localizer["Delete"]
                                                </a>
                                            </div>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Kart Görünümü -->
        <div class="card-view">
            @foreach (var item in Model)
            {
                <div class="admin-card position-relative">
                    @if (item.PhotoData != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PhotoData)" alt="Profile Picture" class="rounded-circle profile-picture" />
                    }
                    else
                    {
                        <div class="initials-circle">
                            @item.FirstName.Substring(0, 1)@item.LastName.Substring(0, 1)
                        </div>
                    }
                    <h5 class="card-title">@item.FirstName @item.LastName</h5>
                    <p class="card-email">@item.Email</p>
                    @if (!isEmployee)
                    {
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                                <i class="bx bx-dots-vertical-rounded"></i>
                            </button>
                            <div class="dropdown-menu">
                                <a asp-action="Details" asp-route-adminId="@item.Id" class="dropdown-item"><i class="bx bx-info-circle me-1"></i> @localizer["Details"]</a>
                                <a asp-action="Update" asp-route-adminId="@item.Id" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i>@localizer["Update"]</a>
                                <a href="javascript:;" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteModal" data-admin-id="@item.Id">
                                    <i class="bx bx-trash me-1"></i> @localizer["Delete"]
                                </a>
                            </div>
                        </div>
                    }
                </div>
            }
        </div>

        <!-- Sayfalama -->
        <div class="d-flex justify-content-center mt-3">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortAdmin = ViewBag.CurrentSort, pageSize = ViewData["CurrentPageSize"] }), new PagedListRenderOptions
       {
           Display = PagedListDisplayMode.Always,
           UlElementClasses = new[] { "pagination", "justify-content-center" },
           LiElementClasses = new[] { "page-item" },
           PageClasses = new[] { "page-link" },
           LinkToPreviousPageFormat = @localizer["Previous"],
           LinkToNextPageFormat = @localizer["Next"],
           LinkToFirstPageFormat = @localizer["First"],
           LinkToLastPageFormat = @localizer["Last"],
           ContainerDivClasses = new[] { "d-flex", "justify-content-center" }
       })
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal - Sadece çalışan değilse göster -->
@if (!isEmployee)
{
    <div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h5 class="modal-title" id="deleteModalLabel">@localizer["DELETE_CONFIRM_TITLE_ADMIN"]</h5>
                    <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                </div>
                <div class="modal-body">
                    @localizer["DELETE_CONFIRM_ADMIN"]
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@localizer["CANCEL_ADMIN"]</button>
                    <a id="confirmDeleteButton" href="#" class="btn btn-danger">@localizer["DELETE_ADMIN"]</a>
                </div>
            </div>
        </div>
    </div>
}

@section Scripts {
    @if (!isEmployee)
    {
        <script src="~/assets/vendor/js/delete-admin-modal-handler.js"></script>
    }
    <script src="~/assets/vendor/js/admin-list-handler.js"></script>
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleBtn = document.getElementById('viewToggleBtn');
            const tableView = document.querySelector('.table-view');
            const cardView = document.querySelector('.card-view');

            const switchToListView = '@Html.Raw(localizer["Switch_To_List_View"].Value)';
            const switchToCardView = '@Html.Raw(localizer["Switch_To_Card_View"].Value)';

            // localStorage yerine sessionStorage kullan ya da varsayılan olarak table view'i kullan
            let currentView = 'table'; // Varsayılan olarak tablo görünümü

            // Sayfa yüklendiğinde varsayılan durumu ayarla
            if (currentView === 'card') {
                tableView.classList.remove('active');
                cardView.classList.add('active');
                toggleBtn.textContent = switchToListView;
            } else {
                tableView.classList.add('active');
                cardView.classList.remove('active');
                toggleBtn.textContent = switchToCardView;
            }

            // Görünüm değiştirme butonuna tıklama olayı
            toggleBtn.addEventListener('click', function () {
                if (tableView.classList.contains('active')) {
                    tableView.classList.remove('active');
                    cardView.classList.add('active');
                    toggleBtn.textContent = switchToListView;
                    currentView = 'card';
                } else {
                    cardView.classList.remove('active');
                    tableView.classList.add('active');
                    toggleBtn.textContent = switchToCardView;
                    currentView = 'table';
                }
            });
        });
    </script>
}