@model WarehouseCreateVM
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["Create"];
    var userRole = User.FindFirst(System.Security.Claims.ClaimTypes.Role)?.Value;
    bool isManager = userRole == "Manager";
}

<div class="w-100 flex-grow-1 p-4" style="background-color: #f5f5f5;">
    <h4 class="mb-4">
       
            <span class="text-muted fw-light">@localizer["Warehouse"] /</span> @localizer["Create"]
        </h4>

        <form asp-action="Create"
              class="w-100">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="mb-3">
                <label asp-for="Name" class="form-label">@localizer["Warehouse_Name"]</label>
            <input asp-for="Name" class="form-control"  />
                <span asp-validation-for="Name" class="text-danger"></span>
                <span class="text-danger" id="nameError"></span>
            </div>
            <div class="mb-3">
                <label asp-for="Address" class="form-label">@localizer["Address"]</label>
            <input asp-for="Address" class="form-control"  />
                <span asp-validation-for="Address" class="text-danger"></span>
                <span class="text-danger" id="addressError"></span>
            </div>

            @if (isManager)
            {
                <div class="mb-3">
                    <label asp-for="BranchId" class="form-label">@localizer["Branch"]</label>
                    <select asp-for="BranchId" class="form-control" id="branch-select" style="width: 100%;">
                        <option value="" selected disabled>@localizer["SelectBranch"]</option>
                        @foreach (var branch in Model.Branches)
                        {
                            <option value="@branch.Id">@branch.Name</option>
                        }
                    </select>
                    <span class="text-danger" id="branchError"></span>
                </div>
            }
            else
            {
                <div class="mb-3">
                    <label asp-for="SelectedCompanyId" class="form-label">@localizer["BranchCompany"]</label>
                    <select asp-for="SelectedCompanyId" class="form-control" id="company-select" style="width: 100%;">
                        <option value="" selected disabled>@localizer["Select_Company"]</option>
                        @foreach (var company in Model.Companies)
                        {
                            <option value="@company.Id">@company.Name</option>
                        }
                    </select>
                    <span asp-validation-for="SelectedCompanyId" class="text-danger"></span>
                </div>

                <div class="mb-3">
                    <label asp-for="BranchId" class="form-label">@localizer["Branch"]</label>
                    <select asp-for="BranchId" class="form-control" id="branch-select" style="width: 100%;">
                        <option value="" selected disabled>@localizer["SelectBranch"]</option>
                    </select>
                    <span class="text-danger" id="branchError"></span>
                </div>
            }
        <div class="d-flex gap-2">
                <input type="submit" value="@localizer["Create"]" class="btn btn-primary" />
                <a asp-action="Index" class="btn btn-secondary">@localizer["BackToList"]</a>
            </div>
        </form>
</div>
                    


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            // Şirket Select2
            $('#company-select').select2({
                placeholder: '@Html.Raw(localizer["Select_Company"])',
                allowClear: true,
                width: '100%',
                matcher: function (params, data) {
                    if ($.trim(params.term) === '') return data;
                    if (typeof data.text === 'undefined') return null;
                    var searchTerm = params.term.toLowerCase();
                    var optionText = data.text.toLowerCase();
                    if (optionText.indexOf(searchTerm) === 0) return data;
                    return null;
                },
                sorter: function (data) {
                    return data.sort(function (a, b) {
                        return a.text.localeCompare(b.text);
                    });
                }
            });

            // Şube Select2
            $('#branch-select').select2({
                placeholder: '@Html.Raw(localizer["SelectBranch"])',
                allowClear: true,
                width: '100%',
                matcher: function (params, data) {
                    if ($.trim(params.term) === '') return data;
                    if (typeof data.text === 'undefined') return null;
                    var searchTerm = params.term.toLowerCase();
                    var optionText = data.text.toLowerCase();
                    if (optionText.indexOf(searchTerm) === 0) return data;
                    return null;
                },
                sorter: function (data) {
                    return data.sort(function (a, b) {
                        return a.text.localeCompare(b.text);
                    });
                }
            });

            // Şirket değiştiğinde şubeleri getir
            $('#company-select').change(function () {
                var companyId = $(this).val();
                if (companyId) {
                    $.get('/Warehouse/GetBranchesByCompany', { companyId: companyId }, function (data) {
                        $('#branch-select').empty().append('<option value=""> </option>'); // Önce temizle
                        $.each(data, function (index, branch) {
                            $('#branch-select').append($('<option>', {
                                value: branch.id,
                                text: branch.name
                            }));
                        });
                        $('#branch-select').trigger('change'); // Select2'yi güncelle
                    });
                } else {
                    $('#branch-select').empty().append('<option value=""> </option>').trigger('change');
                }
            });
        });
    </script>

    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />
