@{
    Guid? companyId = (Guid?)ViewData["SelectedCompanyId"];
}

<div class="container mt-5">
    <div class="row justify-content-center">
        <div class="col-md-8 col-lg-6">
            <div class="card shadow-lg border-0">
                <div class="card-header text-center bg-danger-soft text-dark rounded-top">
                    <h4 class="mb-0">@localizer["BRANCH_LISTED_NOTFOUND"]</h4>
                </div>
                <div class="card-body">
                    <div class="d-flex justify-content-center mb-4">
                        <i class="bx bx-store-alt bx-lg text-warning"></i>
                    </div>
                    <div class="d-flex justify-content-center gap-3 mt-4">
                        <!-- companyId'yi URL'ye ekliyoruz -->
                        <a href="@Url.Action("Create", "Branch", new { companyId = companyId })" class="btn btn-primary">@localizer["Add"]</a>
                        <a href="@Url.Action("Index", "Warehouse")" class="btn btn-secondary">@localizer["BackToList"]</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
