@model IPagedList<BaSalesManagementApp.MVC.Models.EmployeeVMs.EmployeeListVM>
@using Microsoft.Extensions.Localization
@using X.PagedList.Mvc.Common
@using X.PagedList.Mvc.Core
@using X.PagedList
@using X.PagedList.Mvc.Core.Common
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["Index"];

    var localizedRoles = new Dictionary<string, string>
    {
        { "Manager", localizer["Manager"] },
        { "Employee", localizer["Employee"] }
    };
}

<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/bootstrap-icons/1.5.0/font/bootstrap-icons.min.css">
    <style>
        .form-select {
        width: auto;
        min-width: 80px;
        }

        .mb-3 {
        margin-bottom: 1rem;
        }

        .table thead tr {
        border-bottom: 1px solid #dee2e6;
        }

        /* Card View Styles */
        .card-view .employee-card {
        border: 1px solid #dee2e6;
        border-radius: 8px;
        padding: 15px;
        text-align: center;
        background-color: #fff;
        transition: transform 0.2s, box-shadow 0.2s;
        position: relative; 
        z-index: 1; 
        }

        .card-view .employee-card:hover {
        transform: translateY(-5px);
        box-shadow: 0 4px 8px rgba(0, 0, 0, 0.1);
        z-index: 2; 
        }

        .card-view .employee-card:has(.dropdown .dropdown-menu.show) {
        z-index: 3; 
        }

        .card-view .profile-picture {
        width: 60px;
        height: 60px;
        object-fit: cover;
        margin-bottom: 10px;
        }

        .card-view .initials-circle {
        width: 60px;
        height: 60px;
        background-color: #e7e7ff;
        color: #696cff;
        display: flex;
        justify-content: center;
        align-items: center;
        font-weight: 500;
        font-size: 1.2rem;
        border-radius: 50%;
        margin: 0 auto 10px;
        }

        .card-view .card-title {
        font-size: 1.1rem;
        font-weight: 500;
        margin-bottom: 5px;
        }

        .card-view .card-email {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 5px;
        }

        .card-view .card-company {
        font-size: 0.9rem;
        color: #6c757d;
        margin-bottom: 5px;
        }

        .card-view .card-title, .card-email, .card-company {
        overflow: hidden;
        text-overflow: ellipsis;
        white-space: nowrap;
        max-width: 100%;
        }

        .card-view .dropdown {
        position: absolute;
        top: 10px;
        right: 10px;

        }

        .card-view .dropdown-menu {

        z-index: 1000;
        position: absolute;
        right: 10px; 
        top: 100%;
        }


        .card-view {
        display: grid;
        grid-template-columns: repeat(auto-fill, minmax(200px, 1fr));
        gap: 20px;
        }


        .view-toggle-btn {
        font-size: 1rem;
        }

        .table-view {
        display: block;
        }

        .card-view { 
        display: none;
        }

        .card-view.active {
        display: grid;
        }

        .table-view.active {
        display: block;
        }

        .table-view:not(.active) { 
        display: none;
        }
    </style>
</head>

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">@localizer["Employee"] /</span> @localizer["List"]
        </h4>

        <div class="d-flex justify-content-between align-items-center mb-3">
            <div>
                @if(!User.IsInRole("Employee")){
                    <a asp-action="Create" class="btn btn-primary">@localizer["Create_New"]</a>
                }
                <button id="viewToggleBtn" class="btn btn-secondary view-toggle-btn ms-2">
                    @localizer["Change_View"]
                </button>
            </div>

            <div class="d-flex">
                <form method="get" asp-action="Index" class="d-inline-block me-3">
                    <label>@localizer["Show"]</label>
                    <select name="pageSize" onchange="this.form.submit()" class="form-select d-inline-block w-auto ms-2">
                        @if (ViewData["CurrentPageSize"]?.ToString() == "5")
                        {
                            <option value="5" selected>5</option>
                        }
                        else
                        {
                            <option value="5">5</option>
                        }

                        @if (ViewData["CurrentPageSize"]?.ToString() == "10")
                        {
                            <option value="10" selected>10</option>
                        }
                        else
                        {
                            <option value="10">10</option>
                        }

                        @if (ViewData["CurrentPageSize"]?.ToString() == "20")
                        {
                            <option value="20" selected>20</option>
                        }
                        else
                        {
                            <option value="20">20</option>
                        }

                        @if (ViewData["CurrentPageSize"]?.ToString() == "50")
                        {
                            <option value="50" selected>50</option>
                        }
                        else
                        {
                            <option value="50">50</option>
                        }
                    </select>
                    <label>@localizer["Entries"]</label>
                </form>

                <div id="sortAdmin" class="dropdown d-inline-block">
                    <button class="btn btn-primary" type="button" id="dropdownMenuButton" data-bs-toggle="dropdown" aria-haspopup="true" aria-expanded="false">
                        <i class="bi bi-filter" style="font-size:1rem;"></i>
                    </button>
                    <div class="dropdown-menu" aria-labelledby="dropdownMenuButton" style="min-width: 200px; padding: 10px;">
                        <a class="dropdown-item" href="@Url.Action("Index", new { sortOrder = "name_asc", pageSize = ViewData["CurrentPageSize"] })"
                        class="dropdown-item @(ViewBag.CurrentSort == "name_asc" ? "active" : "")">
                            A-Z
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Index", new { sortOrder = "name_desc", pageSize = ViewData["CurrentPageSize"] })"
                        class="dropdown-item @(ViewBag.CurrentSort == "name_desc" ? "active" : "")">
                            Z-A
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Index", new { sortOrder = "date_desc", pageSize = ViewData["CurrentPageSize"] })"
                        class="dropdown-item @(ViewBag.CurrentSort == "date_desc" ? "active" : "")">
                            @localizer["Newest_First"]
                        </a>
                        <a class="dropdown-item" href="@Url.Action("Index", new { sortOrder = "date_asc", pageSize = ViewData["CurrentPageSize"] })"
                        class="dropdown-item @(ViewBag.CurrentSort == "date_asc" ? "active" : "")">
                            @localizer["Oldest_First"]
                        </a>

                        @if (!User.IsInRole("Manager"))
                        {
                            <div class="dropdown-divider"></div>

                            <form method="get" asp-action="Index" class="d-inline-block w-100">
                                <label for="companyFilter" class="form-label d-block">
                                    @Html.Raw(localizer["FilterByCompany"].Value)
                                </label>
                                <select name="companyId" id="companyFilter" class="form-select" style="width: 100%;" onchange="this.form.submit()">
                                    <option value="">@Html.Raw(localizer["AllCompanies"].Value)</option>
                                    @if (ViewData["Companies"] != null)
                                    {
                                        foreach (var company in (List<SelectListItem>)ViewData["Companies"])
                                        {
                                            var isSelected = ViewData["CurrentCompanyId"]?.ToString() == company.Value ? "selected" : "";
                                            @Html.Raw($"<option value='{company.Value}' {isSelected}>{company.Text}</option>")
                                        }
                                    }
                                </select>
                            </form>
                        }
                    </div>
                </div>
            </div>
        </div>

        <!-- Table View -->
        <div class="card table-view active">
            <div class="table-responsive text-nowrap">
                <table class="table">
                    <thead>
                        <tr>
                            <th>@localizer["Profile"].ToString().ToUpper(new System.Globalization.CultureInfo(System.Threading.Thread.CurrentThread.CurrentCulture.Name))</th>
                            <th>@localizer["ColumnName"]</th>
                            <th>@localizer["ColumnSurname"]</th>
                            <th>@localizer["Email"].ToString().ToUpper(new System.Globalization.CultureInfo(System.Threading.Thread.CurrentThread.CurrentCulture.Name))</th>
                            <th>@localizer["Title"]</th>
                            <th>@localizer["CompanyName"].ToString().ToUpper(new System.Globalization.CultureInfo(System.Threading.Thread.CurrentThread.CurrentCulture.Name))</th>
                            <th>@localizer["CreatedDate"].ToString().ToUpper(new System.Globalization.CultureInfo(System.Threading.Thread.CurrentThread.CurrentCulture.Name))</th>
                            @if(!User.IsInRole("Employee")){
                                <th class="text-end">@localizer["Actions"]</th>
                            }
                        </tr>
                    </thead>
                    <tbody class="table-border-bottom-0">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @if (item.PhotoData != null)
                                    {
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PhotoData)" alt="Profile Picture" class="rounded-circle profile-picture" style="width: 40px; height: 40px;" />
                                    }
                                    else
                                    {
                                        <div class="rounded-circle" style="width: 40px; height: 40px; background-color: #e7e7ff; color: #696cff; display: flex; justify-content: center; align-items: center; font-weight:500">
                                            @item.FirstName.Substring(0, 1)@item.LastName.Substring(0, 1)
                                        </div>
                                    }
                                </td>
                                <td class="fw-medium">@item.FirstName</td>
                                <td class="fw-medium">@item.LastName</td>
                                <td class="fw-medium">@item.Email</td>
                                <td class="fw-medium">@(localizedRoles.ContainsKey(item.Title) ? localizedRoles[item.Title] : item.Title)</td>
                                <td class="fw-medium">
                                    @if (item.CompanyPhoto != null)
                                    {
                                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.CompanyPhoto)" alt="Company Picture"
                                        class="rounded-circle profile-picture" style="width: 40px; height: 40px;"
                                        data-bs-toggle="popover" data-bs-html="true"
                                        data-bs-content="
                                        <div class='card' style='width: 150px;'>
                                        <img src='data:image/jpeg;base64,@Convert.ToBase64String(item.CompanyPhoto)' class='card-img-top' alt='Company Logo'>
                                        <div class='card-body text-center'>
                                        <h6 class='card-title'>@item.CompanyName</h6>
                                        </div>
                                        </div>"
                                        />
                                    }
                                    else
                                    {
                                        <span class="rounded-circle" style="width: 40px; height: 40px; background-color: #e7e7ff; color: #696cff; display: flex; justify-content: center; align-items: center; font-weight:500"
                                        data-bs-toggle="popover" data-bs-html="true"
                                        data-bs-content="
                                        <div class='card' style='width: 150px;'>
                                        <div class='card-img-top' style='background-color: #e7e7ff; width: 100%; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; color: #696cff;'>
                                        @item.CompanyName.Substring(0, 2)
                                        </div>
                                        <div class='card-body text-center'>
                                        <h6 class='card-title'>@item.CompanyName</h6>
                                        </div>
                                        </div>">@item.CompanyName.Substring(0, 2)</span>
                                    }
                                </td>
                                <td class="fw-medium">@item.CreatedDate.ToString("dd.MM.yyyy")</td>
                                @if (!User.IsInRole("Employee"))
                                {
                                    <td class="text-end">
                                        <div class="dropdown">
                                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown" style="margin-right: 28px;">
                                                <i class="bx bx-dots-vertical-rounded"></i>
                                            </button>
                                            <div class="dropdown-menu">
                                                <a asp-action="Details" asp-route-employeeId="@item.Id" class="dropdown-item"><i class="bx bx-info-circle me-1"></i>@localizer["Details"]</a>
                                                <a asp-action="Update" asp-route-employeeId="@item.Id" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i>@localizer["Update"]</a>
                                                <a href="javascript:;" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteModal" data-employee-id="@item.Id">
                                                    <i class="bx bx-trash me-1"></i>@localizer["Delete"]
                                                </a>
                                                <a asp-action="GetOrdersByEmployee" asp-route-employeeId="@item.Id" class="dropdown-item"><i class="bx bx-info-circle me-1"></i>@localizer["OrderHistory"]</a>
                                            </div>
                                        </div>
                                    </td>
                                }
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>

        <!-- Card View -->
        <div class="card-view">
            @foreach (var item in Model)
            {
                <div class="employee-card position-relative">
                    @if (item.PhotoData != null)
                    {
                        <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.PhotoData)" alt="Profile Picture" class="rounded-circle profile-picture" />
                    }
                    else
                    {
                        <div class="initials-circle">
                            @item.FirstName.Substring(0, 1)@item.LastName.Substring(0, 1)
                        </div>
                    }
                    <h5 class="card-title">@item.FirstName @item.LastName</h5>
                    <p class="card-email">@item.Email</p>
                   
                    <p class="card-company">
                        @if (item.CompanyPhoto != null)
                        {
                            <img src="data:image/jpeg;base64,@Convert.ToBase64String(item.CompanyPhoto)" alt="Company Picture"
                            class="rounded-circle profile-picture" style="width: 20px; height: 20px; vertical-align: middle;"
                            data-bs-toggle="popover" data-bs-html="true"
                            data-bs-content="
                            <div class='card' style='width: 150px;'>
                            <img src='data:image/jpeg;base64,@Convert.ToBase64String(item.CompanyPhoto)' class='card-img-top' alt='Company Logo'>
                            <div class='card-body text-center'>
                            <h6 class='card-title'>@item.CompanyName</h6>
                            </div>
                            </div>"
                            /> @item.CompanyName
                        }
                        else
                        {
                            <span class="rounded-circle" style="width: 20px; height: 20px; background-color: #e7e7ff; color: #696cff; display: inline-flex; justify-content: center; align-items: center; font-weight:500; font-size: 0.8rem; vertical-align: middle;"
                            data-bs-toggle="popover" data-bs-html="true"
                            data-bs-content="
                            <div class='card' style='width: 150px;'>
                            <div class='card-img-top' style='background-color: #e7e7ff; width: 100%; height: 80px; display: flex; align-items: center; justify-content: center; font-size: 1.5rem; color: #696cff;'>
                            @item.CompanyName.Substring(0, 2)
                            </div>
                            <div class='card-body text-center'>
                            <h6 class='card-title'>@item.CompanyName</h6>
                            </div>
                            </div>">@item.CompanyName.Substring(0, 2)</span> @item.CompanyName
                        }
                    </p>
                    @if (!User.IsInRole("Employee"))
                    {
                        <div class="dropdown">
                            <button type="button" class="btn p-0 dropdown-toggle hide-arrow" data-bs-toggle="dropdown">
                            <i class="bx bx-dots-vertical-rounded"></i>
                        </button>
                        <div class="dropdown-menu">
                            <a asp-action="Details" asp-route-employeeId="@item.Id" class="dropdown-item"><i class="bx bx-info-circle me-1"></i>@localizer["Details"]</a>
                            <a asp-action="Update" asp-route-employeeId="@item.Id" class="dropdown-item"><i class="bx bx-edit-alt me-1"></i>@localizer["Update"]</a>
                            <a href="javascript:;" class="dropdown-item" data-bs-toggle="modal" data-bs-target="#deleteModal" data-employee-id="@item.Id">
                                <i class="bx bx-trash me-1"></i>@localizer["Delete"]
                            </a>
                            <a asp-action="GetOrdersByEmployee" asp-route-employeeId="@item.Id" class="dropdown-item"><i class="bx bx-info-circle me-1"></i>@localizer["OrderHistory"]</a>
                        </div>
                    </div> }
                </div>
            }
        </div>

        <div class="d-flex justify-content-center mt-3">
            @Html.PagedListPager(Model, page => Url.Action("Index", new { page, sortOrder = ViewData["CurrentSortOrder"], pageSize = ViewData["CurrentPageSize"] }), new PagedListRenderOptions
           {
               Display = PagedListDisplayMode.Always,
               UlElementClasses = new[] { "pagination", "justify-content-center" },
               LiElementClasses = new[] { "page-item" },
               PageClasses = new[] { "page-link" },
               LinkToPreviousPageFormat = @localizer["Previous"],
               LinkToNextPageFormat = @localizer["Next"],
               LinkToFirstPageFormat = @localizer["First"],
               LinkToLastPageFormat = @localizer["Last"],
               ContainerDivClasses = new[] { "d-flex", "justify-content-center" }
           })
        </div>
    </div>
</div>

<!-- Delete Confirmation Modal -->
<div class="modal fade" id="deleteModal" tabindex="-1" aria-labelledby="deleteModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="deleteModalLabel">@localizer["DELETE_CONFIRM_TITLE_EMPLOYEE"]</h5>
                <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
                @localizer["DELETE_CONFIRM_EMPLOYEE"]
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">@localizer["CANCEL_EMPLOYEE"]</button>
                <a id="confirmDeleteButton" href="#" class="btn btn-danger">@localizer["DELETE_EMPLOYEE"]</a>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var deleteModal = document.getElementById('deleteModal');
            deleteModal.addEventListener('show.bs.modal', function (event) {
                var button = event.relatedTarget;
                var employeeId = button.getAttribute('data-employee-id');
                var confirmDeleteButton = deleteModal.querySelector('#confirmDeleteButton');
                confirmDeleteButton.href = '/Employee/Delete?employeeId=' + employeeId;
            });
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            var popoverTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="popover"]'))
            var popoverList = popoverTriggerList.map(function (popoverTriggerEl) {
                return new bootstrap.Popover(popoverTriggerEl, {
                    trigger: 'hover',
                    placement: 'right'
                })
            })
        });
    </script>

    <script>
        document.addEventListener('DOMContentLoaded', function () {
            const toggleBtn = document.getElementById('viewToggleBtn');
            const tableView = document.querySelector('.table-view');
            const cardView = document.querySelector('.card-view');

            // Localized text'leri ham haliyle JavaScript'e aktar
            const switchToListView = '@Html.Raw(localizer["Switch_To_List_View"].Value)';
            const switchToCardView = '@Html.Raw(localizer["Switch_To_Card_View"].Value)';

            // Mevcut görünüm tercihini yükle veya varsayılan olarak liste görünümünü kullan
            const currentView = localStorage.getItem('employeeView') || 'table';
            if (currentView === 'card') {
                tableView.classList.remove('active');
                cardView.classList.add('active');
                toggleBtn.textContent = switchToListView;
            } else {
                tableView.classList.add('active');
                cardView.classList.remove('active');
                toggleBtn.textContent = switchToCardView;
            }

            // Görünüm değiştirme butonuna tıklama olayı
            toggleBtn.addEventListener('click', function () {
                if (tableView.classList.contains('active')) {
                    tableView.classList.remove('active');
                    cardView.classList.add('active');
                    toggleBtn.textContent = switchToListView;
                    localStorage.setItem('employeeView', 'card');
                } else {
                    cardView.classList.remove('active');
                    tableView.classList.add('active');
                    toggleBtn.textContent = switchToCardView;
                    localStorage.setItem('employeeView', 'table');
                }
            });
        });
    </script>
}