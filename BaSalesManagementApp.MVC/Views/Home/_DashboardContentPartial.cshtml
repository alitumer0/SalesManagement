@model string

@{
    var isNegative = Model.StartsWith("-");
    var cssClass = isNegative ? "text-danger fw-bold" : "text-success fw-bold";
}

<div class="d-flex p-4 pt-3">
    <div class="avatar flex-shrink-0 me-3">
        <img src="../assets/img/icons/unicons/wallet.png" alt="icon" />
    </div>
    <div>
        <small class="text-muted d-block">Toplam</small>
        <h6 class="mb-0 @cssClass">@Model</h6>
    </div>
</div>
