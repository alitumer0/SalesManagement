@model BaSalesManagementApp.MVC.Models.BadgeVMs.BadgeCreateVM
@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["Create"];
}
@{
    var isManager = User.IsInRole("Manager"); // Kullanıcının rolünü kontrol et
    var selectedCompany = Model.Companies.FirstOrDefault(); // Manager rolündeki kullanıcı için varsayılan şirket
}
<div class="w-100 flex-grow-1 p-4" style="background-color: #f5f5f5;">
    <h4 class="mb-4">
        <span class="text-muted fw-light">@localizer["Badge"] /</span> @localizer["Create"]
    </h4>

    <form asp-action="Create" class="w-100">

        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="mb-3">
            <label asp-for="Name" class="form-label">@localizer["BadgeName"]</label>
            <input asp-for="Name" id="BadgeName" autocomplete="off" class="form-control"
                   data-val="true" data-val-required="@localizer["Please enter the badge name."]"
                   data-val-length="@localizer["Badge name must be between 2 and 128 characters."]"
                   data-val-length-min="2" data-val-length-max="128" style="text-transform: capitalize;" />
            <span asp-validation-for="Name" id="badgeNameError" class="text-danger"></span>
        </div>

                                <div class="mb-3">
                                    @if (isManager)
                                    {
                                        <input type="hidden" class="form-control" value="@selectedCompany?.Name" />
                                        <input type="hidden" asp-for="CompanyId" value="@selectedCompany?.Id" />
                                    }
                                    else
                                    {
                                        <label asp-for="CompanyId" class="form-label">@localizer["BadgeCompany"]</label>
                                        <select asp-for="CompanyId" class="form-control" id="companySelect" style="width: 100%;">
                                            <option value="">@localizer["Select_Company"]</option>
                                            @foreach (var company in Model.Companies)
                                            {
                                                <option value="@company.Id">@company.Name</option>
                                            }
                                        </select>
                                    }
                                    <span asp-validation-for="CompanyId" id="companySelectError" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="SalesQuantity" class="form-label">@localizer["BadgeSalesQuantity"]</label>
                                    <input asp-for="SalesQuantity"
                                           id="SalesQuantity"
                                           class="form-control"
                                           autocomplete="off"
                                           data-val="true"
                                           data-val-required="@localizer["PleaseEnterSalesQuantity"]"
                                           data-val-range="@localizer["SalesQuantityMinError"]"
                                           data-val-range-min="1"
                                           data-val-range-max="2147483647"
                                           data-val-number="@localizer["BadgeInvalidNumber"]" />
                                    <span asp-validation-for="SalesQuantity" id="salesQuantityError" class="text-danger"></span>
                                </div>
                                <div class="d-flex gap-2">
                                    <input type="submit" value="@localizer["Create"]" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-secondary">@localizer["BackToList"]</a>
                                </div>

        @for (int i = 0; i < Model.Companies.Count(); i++)
        {
            <input type="hidden" name="Companies[@i].Id" value="@Model.Companies.ElementAt(i).Id" />
            <input type="hidden" name="Companies[@i].Name" value="@Model.Companies.ElementAt(i).Name" />
        }
    </form>
</div>


@section Scripts {
    @Html.Partial("_ValidationScriptsPartial")
}

<script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
<script>
    $(document).ready(function () {
        // Backend'den isManager değişkenini güvenilir bir şekilde aktar
        var isManager = @Json.Serialize(isManager);

        // Branch Name alanı için anlık validasyon
        $('#BadgeName').on('input keyup', function () {
            var badgeNameValue = $(this).val();
            var errorMessage = $('#badgeNameError');
            var requiredMessage = $(this).data('val-required');
            var lengthMessage = $(this).data('val-length');

            if (badgeNameValue.length === 0) {
                errorMessage.text(requiredMessage).show();
            } else if (badgeNameValue.length < 2 || badgeNameValue.length > 128) {
                errorMessage.text(lengthMessage).show();
            } else {
                errorMessage.text('').hide();
            }
        });


        //şirket seçimi için select2
        //Sistemdeki kişi Role === Manager ise:
        if (ismanager) {
            $('#companyselect').parent().hide();
            var companyId = $('#companyselect').data('company-id');
            $('#companyId').val(companyId);
        }else {
                $('#companySelect').select2({
                    placeholder: "@localizer["Select_Company"]",
                    allowClear: true,
                    width: 'resolve',
                    matcher: function (params, data) {
                        // Arama terimi yoksa, mevcut seçenekleri göster
                        if ($.trim(params.term) === '') {
                            return data;
                        }

                        // Veri boşsa, eşleşme yok demektir
                        if (typeof data.text === 'undefined') {
                            return null;
                        }

                        // Arama terimini küçük harflere çevir ve baştan eşleşme kontrolü yap
                        var searchTerm = params.term.toLowerCase();
                        var optionText = data.text.toLowerCase();

                        // Eğer seçenek, arama terimiyle başlıyorsa, sonucu döndür
                        if (optionText.indexOf(searchTerm) === 0) {
                            return data;
                        }

                        // Aksi takdirde eşleşme yok
                        return null;
                    },
                    sorter: function (data) {
                        // Alfabetik sıralama
                        return data.sort(function (a, b) {
                            return a.text.localeCompare(b.text);
                        });
                    },
                    language: {
                        noResults: function () {
                            return '@Html.Raw(localizer["No matching results"])'; // Burada uygun localizer anahtarını kullanın
                        }
                    }
                });

                // Şirket seçimi değiştiğinde hata mesajını kontrol et
                $('#companySelect').on('change', function () {
                    var selectedCompany = $(this).val();
                    var errorMessage = $('#companySelectError');

                    if (!selectedCompany) {
                        errorMessage.text(@Json.Serialize(localizer[Messages.BADGE_COMPANY_RELATION].Value)).show();
                    } else {
                        errorMessage.text('').hide(); // Şirket seçildiğinde hata mesajını gizle
                    }
                });

                // SalesQuantity Validasyonları
                $('#SalesQuantity').on('input', function () {
                    var value = $(this).val().replace(/[^0-9]/g, ''); // Sadece rakamları tut
                    $(this).val(value); // Harf ve özel karakterleri temizle
                }).on('blur', function () {
                    var errorEl = $('#salesQuantityError');
                    var value = $(this).val();

                    // Validasyon sırası: 1) Required 2) isNaN 3) Range
                    if (!value) {
                        errorEl.text($(this).data('val-required')).show();

                    } 
                    if (isNaN(value)) {
                    errorEl.text($(this).data('val-number')).show(); 
                    return;
                    }else if (parseInt(value) < 1) {
                        errorEl.text($(this).data('val-range')).show();
                    } else {
                        errorEl.hide();
                    }
                });

            // Şirket seçilmeden formun gönderilmesini engellemek için
            $('form').on('submit', function (e) {
                var selectedCompany = $('#companySelect').val();
                var errorMessage = $('#companySelectError');

                if (!selectedCompany) {
                    e.preventDefault();
                    errorMessage.text(@Json.Serialize(localizer[Messages.BADGE_COMPANY_RELATION].Value)).show();
                } else {
                    errorMessage.text('').hide();
                }

                // SalesQuantity Validasyonu
                var salesQty = $('#SalesQuantity').val();
                if (!salesQty) {
                    $('#salesQuantityError').text($('#SalesQuantity').data('val-required')).show();
                    hasError = true;
                }  else if (isNaN(salesQty)) {
                errorEl.text($('#SalesQuantity').data('val-number')).show(); 
                hasError = true;
                }
                 else if (parseInt(salesQty) < 1) {
                    $('#salesQuantityError').text($('#SalesQuantity').data('val-range')).show();
                    hasError = true;
                }

                if (hasError) e.preventDefault();
            });
        }
    });
</script>