@using BaSalesManagementApp.Core.Enums

@using BaSalesManagementApp.Dtos.CompanyDTOs

@using Microsoft.Extensions.Localization

@using System.Security.Claims

@inject IStringLocalizer<Resource> localizer

@model BaSalesManagementApp.MVC.Models.PromotionVMs.PromotionCreateVM

@{
    ViewData["Title"] = localizer["Create"];
}

@await Html.PartialAsync("_Loading")

@{

    bool isManager = User.IsInRole("Manager"); // Kullanıcının rolünü kontrol et

    string companyId = ViewData.ContainsKey("CompanyId") ? ViewBag.CompanyId : "";

    var selectedCompany = Model.Companies.FirstOrDefault(); // Manager rolündeki kullanıcı için varsayılan şirket

}

<link href="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/css/select2.min.css" rel="stylesheet" />

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">@localizer["Promotion"] /</span> @localizer["Create"]
        </h4>

        <div class="row">
            <div class="content-wrapper">
                <div class="col-md-12 col-lg-12">
                        <div class="card-body">
                            <form id="createPromotionForm" asp-action="Create">
                                <div asp-validation-summary="ModelOnly" class="text-danger"></div>

                                @if (!isManager)

                                {
                                    <div class="mb-3">
                                        <label asp-for="CompanyId" class="form-label">@localizer["Company2"]</label>
                                        <select id="CompanyId" class="form-control select2" asp-for="CompanyId" data-placeholder="@localizer["Select_Company"]" style="width: 100%;">
                                            <option value="" selected disabled>@localizer["Select_Company"]</option>
                                            @if (Model != null && Model.Companies != null && Model.Companies.Any())

                                            {

                                                List<CompanyDTO> companyDTOs = Model.Companies.ToList();

                                                @foreach (var company in companyDTOs)

                                                {
                                                    <option value="@company.Id">@company.Name</option>

                                                }

                                            }
                                        </select>
                                        <span id="companyError" class="text-danger"></span>
                                    </div>
                                    <!-- Kategori Seçimi (Dinamik) -->
                                    <div class="mb-3">
                                        <label asp-for="CategoryId" class="form-label">@localizer["Category2"]</label>
                                        <select id="CategoryId" class="form-control select2" asp-for="CategoryId" data-placeholder="@localizer["Select_Category"]" disabled style="width: 100%;">
                                            <option value="" disabled>@localizer["Select_Category"]</option>
                                        </select>
                                        <span id="categoryError" class="text-danger"></span>
                                    </div>
                                }
                                

                                <!-- Ürün Seçimi (Dinamik) -->
                                <div class="mb-3">
                                    <label asp-for="ProductId" class="form-label">@localizer["Product"]</label>
                                    <select id="ProductId" class="form-control select2" asp-for="ProductId" data-placeholder="@localizer["Select_a_Product"]" disabled style="width: 100%;">
                                        <option value="" disabled>@localizer["Select_a_Product"]</option>
                                    </select>
                                    <span id="productError" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Discount" class="form-label">@localizer["Discount2"] (%)</label>
                                    <input id="Discount" asp-for="Discount" class="form-control" min="1" max="99" />
                                    <span id="discountError" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="Price" class="form-label" style="pointer-events: none; user-select: none;">
                                        @localizer["Price2"]
                                    </label>
                                    <input type="number" id="Price" asp-for="Price" class="form-control" />
                                    <span id="priceError" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="TotalPrice" class="form-label" style="pointer-events: none; user-select: none; ">

                                    @localizer["TotalPrice"].Value.ToUpper(new System.Globalization.CultureInfo("tr-TR"))
                                    </label>
                                    <input type="text" id="TotalPrice" asp-for="TotalPrice" class="form-control" disabled readonly style="pointer-events: none; user-select: none;" />
                                    <span id="totalPriceError" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="IsActive" class="form-check-label">@localizer["Active"]</label>
                                    <input asp-for="IsActive" class="form-check-input" />
                                </div>
                                <div class="mb-3">
                                    <label asp-for="StartDate" class="form-label">@localizer["StartDate2"]</label>
                                    <input asp-for="StartDate" id="StartDate" type="date" class="form-control" value="@Model.StartDate.ToString(DateTime.Now.ToString("yyyy-MM-dd"))" />
                                    <span id="startDateError" class="text-danger"></span>
                                </div>
                                <div class="mb-3">
                                    <label asp-for="EndDate" class="form-label">@localizer["EndDate2"]</label>
                                    <input asp-for="EndDate" id="EndDate" type="date" class="form-control" value="@Model.EndDate.ToString(DateTime.Now.ToString("yyyy-MM-dd"))" />
                                    <span id="endDateError" class="text-danger"></span>
                                </div>

                                <div>
                                    <input type="submit" value="@localizer["Create"]" class="btn btn-primary" />
                                    <a asp-action="Index" class="btn btn-secondary">@localizer["BackToList"]</a>
                                </div>

                                @if (!isManager)

                                {

                                    @for (int i = 0; i < Model.Companies.Count(); i++)

                                    {
                                        <input type="hidden" name="Companies[@i].Id" value="@Model.Companies.ElementAt(i).Id" />
                                        <input type="hidden" name="Companies[@i].Name" value="@Model.Companies.ElementAt(i).Name" />

                                    }

                                    @for (int i = 0; i < Model.Products.Count(); i++)

                                    {
                                        <input type="hidden" name="Products[@i].Id" value="@Model.Products.ElementAt(i).Id" />
                                        <input type="hidden" name="Products[@i].Name" value="@Model.Products.ElementAt(i).Name" />

                                    }

                                }

                                else

                                {
                                    <input type="hidden" name="CompanyId" value="@companyId" />

                                }

                            </form>
                        </div>
                </div>
            </div>
        </div>
    </div>
</div>


@section Scripts {
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/select2/4.0.13/js/select2.min.js"></script>
    <script>
        $(document).ready(function () {
            console.log("Sayfa tamamen yüklendi");

            if ("@isManager" === "True") {
                CompanyChange("@companyId");
            }

            // Şirket dropdown'ı için Select2 başlatma
            if ($('#CompanyId').length) {
                console.log("CompanyId bulundu, Select2 başlatılıyor");
                $('#CompanyId').select2({
                    placeholder: '@Html.Raw(localizer["Select_Company"])',
                    allowClear: true,
                    width: 'resolve',
                    sorter: function (data) {
                        return data.sort(function (a, b) {
                            return a.text.localeCompare(b.text);
                        });
                    },
                    language: {
                        noResults: function () {
                            return '@Html.Raw(localizer["No matching results"])';
                        }
                    },
                    matcher: function (params, data) {
                        if ($.trim(params.term) === '') {
                            return data;
                        }
                        var searchTerm = params.term.toLowerCase();
                        var optionText = data.text.toLowerCase();
                        if (optionText.startsWith(searchTerm)) {
                            return data;
                        }
                        return null;
                    }
                });
            } else {
                console.log("CompanyId bulunamadı, Select2 başlatılamıyor.");
            }

            // Ürün dropdown'ı için Select2 başlatma
            $('#ProductId').select2({
                placeholder: '@Html.Raw(localizer["Select_a_Product"])',
                allowClear: true,
                width: 'resolve',
                matcher: function (params, data) {
                    if ($.trim(params.term) === '') {
                        return data;
                    }
                    if (data.text.toLowerCase().startsWith(params.term.toLowerCase())) {
                        return data;
                    }
                    return null;
                },
                sorter: function (data) {
                    return data.sort(function (a, b) {
                        return a.text.localeCompare(b.text);
                    });
                },
                language: {
                    noResults: function () {
                        return '@Html.Raw(localizer["No matching results"])';
                    }
                }
            });

            // Şirket seçildiğinde kategori dropdown'ını güncelle
            $('#CompanyId').on('change', function () {
                var companyId = $(this).val();

                if (companyId) {
                    showLoadingAnimation(); // Loading animasyonunu göster
                    $.ajax({
                        url: '@Url.Action("GetCategoriesByCompanyId", "Promotion")',
                        data: { companyId: companyId },
                        success: function (categories) {
                            $('#CategoryId').empty().prop('disabled', false);
                            $('#CategoryId').append('<option value="" disabled>@Html.Raw(localizer["Select_Category"])</option>');
                            categories.forEach(function (category) {
                                $('#CategoryId').append('<option value="' + category.id + '">' + category.name + '</option>');
                            });
                            $('#ProductId').empty().prop('disabled', true).append('<option value="" disabled>@Html.Raw(localizer["Select_a_Product"])</option>');
                        },
                        complete: function() {
                            hideLoadingAnimation(); // Loading animasyonunu gizle
                        }
                    });
                } else {
                    $('#CategoryId').empty().prop('disabled', true).append('<option value="" disabled>@Html.Raw(localizer["Select_Category"])</option>');
                    $('#ProductId').empty().prop('disabled', true).append('<option value="" disabled>@Html.Raw(localizer["Select_a_Product"])</option>');
                }
            });

            $('#CategoryId').on('change', function () {
                var categoryId = $(this).val();

                if (categoryId) {
                    showLoadingAnimation(); // Loading animasyonunu göster
                    $.ajax({
                        url: '@Url.Action("GetProductsByCategoryId", "Promotion")',
                        data: { categoryId: categoryId },
                        success: function (products) {
                            $('#ProductId').empty().prop('disabled', false);
                            $('#ProductId').append('<option value="" disabled selected>@Html.Raw(localizer["Select_a_Product"])</option>');

                            // Ürünleri dropdown'a eklerken fiyat bilgisini data-price olarak saklıyoruz
                            products.forEach(function (product) {
                                $('#ProductId').append('<option value="' + product.id + '" data-price="' + product.price + '">' + product.name + '</option>');
                            });

                            // Eğer sadece bir ürün varsa, onu otomatik seç ve fiyatı güncelle
                            if (products.length === 1) {
                                var singleProduct = products[0];
                                $('#ProductId').val(singleProduct.id).trigger('change'); // Ürünü seçili yap
                                $('#Price').val(singleProduct.price.toFixed(2)).trigger('keyup'); // Fiyatı doldur ve hesaplamayı tetikle
                            }
                        },
                        complete: function() {
                            hideLoadingAnimation(); // Loading animasyonunu gizle
                        }
                    });
                } else {
                    $('#ProductId').empty().prop('disabled', true).append('<option value="" disabled>@Html.Raw(localizer["Select_a_Product"])</option>');
                    $('#Price').val(''); // Eğer kategori değiştiyse fiyatı temizle
                }
            });

            // Ürün seçildiğinde fiyatı güncelle
            $('#ProductId').on('change', function () {
                var selectedProduct = $(this).find(':selected');
                var productPrice = selectedProduct.data('price');

                if (productPrice) {
                    $('#Price').val(productPrice.toFixed(2)).trigger('keyup'); // Fiyatı otomatik doldur ve hesaplamayı tetikle
                }
            });




            // Fiyat ve indirim oranını alarak toplam fiyatı hesaplayan fonksiyon
            function calculateTotalPrice() {
                var price = parseFloat($("#Price").val().trim());
                var discount = parseFloat($("#Discount").val().trim());

                if (!isNaN(price) && price > 0 && !isNaN(discount) && discount >= 0 && discount <= 100) {
                    var totalPrice = price - (price * (discount / 100)); // İndirim uygulanmış fiyat
                    $("#TotalPrice").val(totalPrice.toFixed(2)); // Toplam fiyatı 2 ondalık basamağa yuvarlayarak yazdır
                } else {
                    $("#TotalPrice").val(''); // Eğer fiyat veya indirim geçersizse toplam fiyatı temizle
                }
            }

            // Discount ve Price alanlarında değişiklik olduğunda hesaplamayı tetikle
            $("#Price, #Discount").on('keyup blur', function () {
                calculateTotalPrice();
            });

            // İlk başta sayfa yüklendiğinde eğer değerler varsa hesaplama yap
            if ($("#Price").val().trim() !== "" && $("#Discount").val().trim() !== "") {
                calculateTotalPrice();
            }

            // HATA MESAJLARI
            var discountRequiredMessage = @Json.Serialize(localizer[Messages.PROMOTION_DISCOUNT_REQUIRED].Value);
            var discountMinRangeMessage = @Json.Serialize(localizer[Messages.PROMOTION_DISCOUNT_GREATER_THAN_ZERO].Value);
            var discountMaxRangeMessage = @Json.Serialize(localizer[Messages.PROMOTION_DISCOUNT_LESS_THAN_HUNDRED].Value);

            var priceRequiredMessage = @Json.Serialize(localizer[Messages.PROMOTION_PRICE_REQUIRED].Value);
            var priceMinRangeMessage = @Json.Serialize(localizer[Messages.ORDER_TOTALPRICE_VALIDATION].Value);

            var totalPriceRequiredMessage = @Json.Serialize(localizer[Messages.PROMOTION_TOTAL_PRICE_REQUIRED].Value);
            var totalPriceMinRangeMessage = @Json.Serialize(localizer[Messages.PROMOTION_TOTAL_PRICE_GREATER_THAN_ZERO].Value);
            var totalPriceFormatMessage = @Json.Serialize(localizer[Messages.PROMOTION_TOTAL_PRICE_GREATER_THAN_OR_EQUAL_PRICE].Value);

            var startDateRequiredMessage = @Json.Serialize(localizer[Messages.PROMOTION_START_DATE_REQUIRED].Value);
            var startDateInvalidMessage = @Json.Serialize(localizer[Messages.PROMOTION_START_DATE_GREATER_THAN_TODAY].Value);
            var startDateBeforeEndDateMessage = @Json.Serialize(localizer[Messages.PROMOTION_START_DATE_LESS_THAN_END_DATE].Value);

            var endDateRequiredMessage = @Json.Serialize(localizer[Messages.PROMOTION_END_DATE_REQUIRED].Value);
            var endDateInvalidMessage = @Json.Serialize(localizer[Messages.PROMOTION_END_DATE_GREATER_THAN_START_DATE].Value);

            var companyRequiredMessage = @Json.Serialize(localizer[Messages.PROMOTION_COMPANY_RELATION].Value);

            var productRequiredMessage = @Json.Serialize(localizer[Messages.PROMOTION_PRODUCT_RELATION].Value);

            function validateDiscount() {
                const discount = $("#Discount").val().trim();

                if (discount.length === 0) {
                    $("#discountError").text(discountRequiredMessage);
                } else if (discount <= 0) {
                    $("#discountError").text(discountMinRangeMessage);
                } else if (discount > 100) {
                    $("#discountError").text(discountMaxRangeMessage);
                } else {
                    $("#discountError").text(""); // Hata yok
                }
            }

            function validatePrice() {
                const price = $("#Price").val().trim();

                if (price.length === 0) {
                    $("#priceError").text(priceRequiredMessage);
                } else if (price <= 0) {
                    $("#priceError").text(priceMinRangeMessage);
                } else {
                    $("#priceError").text(""); // Hata yok
                }
            }

            function validateTotalPrice() {
                const totalPrice = parseFloat($("#TotalPrice").val().trim());
                const price = parseFloat($("#Price").val().trim());

                if (isNaN(totalPrice)) {
                    $("#totalPriceError").text(totalPriceRequiredMessage);
                } else if (totalPrice <= 0) {
                    $("#totalPriceError").text(totalPriceMinRangeMessage);
                } else if (totalPrice > price) {
                    $("#totalPriceError").text(totalPriceFormatMessage);
                } else {
                    $("#totalPriceError").text(""); // Hata yok
                }
            }

            function validateStartDate() {
                const startDate = $("#StartDate").val().trim();
                const endDate = $("#EndDate").val().trim();

                if (startDate.length === 0) {
                    $("#startDateError").text(startDateRequiredMessage);
                } else if (new Date(startDate) < new Date()) {
                    $("#startDateError").text(startDateInvalidMessage);
                } else if (endDate.length > 0 && new Date(startDate) >= new Date(endDate)) {
                    $("#startDateError").text(startDateBeforeEndDateMessage);
                } else {
                    $("#startDateError").text(""); // Hata yok
                }
            }

            function validateEndDate() {
                const endDate = $("#EndDate").val().trim();
                const startDate = $("#StartDate").val().trim();

                if (endDate.length === 0) {
                    $("#endDateError").text(endDateRequiredMessage);
                } else if (new Date(endDate) <= new Date(startDate)) {
                    $("#endDateError").text(endDateInvalidMessage);
                } else {
                    $("#endDateError").text(""); // Hata yok
                }
            }

            function validateCompany() {
                const companyId = $("#CompanyId").val();
                if (companyId === "") {
                    $("#companyError").text(companyRequiredMessage);
                } else {
                    $("#companyError").text("");
                }
            }

            $("#CompanyId").change(function () {
                validateCompany();
            });

            function validateProduct() {
                const productId = $("#ProductId").val();
                if (productId === "") {
                    $("#productError").text(productRequiredMessage);
                } else {
                    $("#productError").text("");
                }
            }

            $("#Discount").on('keyup blur', validateDiscount);
            $("#Price").on('keyup blur', validatePrice);
            $("#TotalPrice").on('keyup blur', validateTotalPrice);
            $("#StartDate").on('keyup blur', validateStartDate);
            $("#EndDate").on('keyup blur', validateEndDate);
            $("#CompanyId").on('keyup blur', validateCompany);
            $("#ProductId").on('change', validateProduct);

            $("#createPromotionForm").submit(function (event) {
                validateDiscount();
                validatePrice();
                validateTotalPrice();
                validateStartDate();
                validateEndDate();
                validateCompany();
                validateProduct();

                let isValid = true;

                if ($("#discountError").text() || $("#priceError").text() || $("#totalPriceError").text() || $("#startDateError").text() || $("#endDateError").text() || $("#companyError").text() || $("#productError").text()) {
                    isValid = false;
                }

                if (!isValid) {
                    event.preventDefault();
                } else {
                    // Eğer validasyon başarılıysa disabled'ı kaldır
                    $("#Price").prop("disabled", false);
                    $("#TotalPrice").prop("disabled", false);
                }
            });
        });
    </script>
}

@{
    await Html.RenderPartialAsync("_ValidationScriptsPartial");
}




