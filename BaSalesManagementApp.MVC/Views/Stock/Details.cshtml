@model BaSalesManagementApp.MVC.Models.StockVMs.StockDetailVM

@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["Details"];
}

<div class="content-wrapper">
    <div class="container-xxl flex-grow-1 container-p-y">
        <h4 class="py-3 mb-4">
            <span class="text-muted fw-light">@localizer["Stock"] /</span>
            @localizer["Details"]
        </h4>
        <div class="row">

            <div class="col-lg-6 col-md-8 col-sm-12">
                <div class="card mb-4">
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-4 mb-4">
                                @localizer["Product Name"]
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.ProductName)
                            </dd>
                            <dt class="col-4 mb-4">
                                @{
                                    var countLabel = localizer["Count"].Value;
                                    countLabel = char.ToUpper(countLabel[0]) + countLabel.Substring(1).ToLower();
                                }
                                @countLabel
                            </dt>
                            <dd class="col-8">
                                @Html.DisplayFor(model => model.Count)
                            </dd>
                            <dt class="col-4 mb-4">
                                @localizer["Warehouse"]
                            </dt>
                            <dd class="col-8">
                                @(string.IsNullOrEmpty(Model.WarehouseName) ? @localizer["No warehouse"] : Model.WarehouseName)
                            </dd>
                        </dl>
                    </div>
                    <div class="card-footer" style="margin-top:-50px">
                        @if (!User.IsInRole("Employee"))
                        {
                            <a href="@Url.Action("Update", new { stockId = Model.Id })" class="btn btn-primary">@localizer["Update"]</a>
                        }
                        <a asp-action="Index" class="btn btn-secondary">@localizer["BackToList"]</a>
                    </div>
                </div>
            </div>

        </div>
    </div>
</div>
