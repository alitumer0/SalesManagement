@using Microsoft.Extensions.Localization
@inject IStringLocalizer<Resource> localizer

@{
    ViewData["Title"] = localizer["AccessDeniedTitle"];
    Layout = null;
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <title>@ViewData["Title"]</title>

    <!-- Fontlar ve İkonlar -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
    <link href="https://fonts.googleapis.com/css2?family=Public+Sans:wght@400;600&display=swap" rel="stylesheet" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />

    <!-- Layout’tan alınan stiller -->
    <link rel="stylesheet" href="@Url.Content("~/assets/vendor/fonts/boxicons.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/vendor/css/core.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/vendor/css/theme-default.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/demo.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/css/Loading.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.css")" />
    <link rel="stylesheet" href="@Url.Content("~/assets/vendor/libs/apex-charts/apex-charts.css")" />

    <!-- Yardımcılar -->
    <script src="@Url.Content("~/assets/vendor/js/helpers.js")"></script>
    <script src="@Url.Content("~/assets/js/config.js")"></script>

    <style>
        body {
            font-family: 'Public Sans', sans-serif;
            background-color: #f8f9fa;
        }
    </style>
</head>
<body>
    <div class="text-center p-5">
        <lottie-player src="https://assets8.lottiefiles.com/packages/lf20_fclga8fl.json"
                       background="transparent"
                       speed="1"
                       style="width: 300px; height: 300px; margin: auto;"
                       loop
                       autoplay>
        </lottie-player>

        <h2 class="text-danger fw-bold mt-4">@localizer["AccessDeniedTitle"]</h2>
        <p class="mt-2">@localizer["AccessDeniedMessage"]</p>
        <p class="text-muted">@localizer["ContactAdmin"]</p>

        <a href="/Home/Index" class="btn btn-outline-primary mt-3">@localizer["ReturnToHome"]</a>
    </div>

    <!-- Lottie player için gerekli JS -->
    <script src="https://unpkg.com/@@lottiefiles/lottie-player@latest/dist/lottie-player.js"></script>

        
   
    <!-- Gerekli core ve vendor JS dosyaları -->
    <script src="@Url.Content("~/assets/vendor/libs/jquery/jquery.js")"></script>
    <script src="@Url.Content("~/assets/vendor/libs/popper/popper.js")"></script>
    <script src="@Url.Content("~/assets/vendor/js/bootstrap.js")"></script>
    <script src="@Url.Content("~/assets/vendor/libs/perfect-scrollbar/perfect-scrollbar.js")"></script>
    <script src="@Url.Content("~/assets/vendor/js/menu.js")"></script>

    <script src="@Url.Content("~/assets/vendor/libs/apex-charts/apexcharts.js")"></script>
    <script src="@Url.Content("~/assets/js/main.js")"></script>
    <script src="@Url.Content("~/assets/js/Loading.js")"></script>

    <!-- 5 saniye sonra ana sayfaya otomatik geçiş yapacak -->
    <script>
        setTimeout(function() {
            window.location.href = "/Home/Index";
        }, 5000);
    </script>
</body>
</html>
